<div class="myDiv">
  <div class="d-flex align-items-center flex-column justify-content-center h-100 bg-dark text-white" id="header">
    <table class="table table-dark table-striped">
      <thead class="thead-dark">

      <tr>
        <th class="col-md-2">Name</th>
        <th class="col-md-2">Price</th>
        <th class="col-md-2">Description</th>
        <th class="col-md-2">Category</th>
        <th class="col-md-4">Options</th>
      </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td class="col-md-2"><%= product.title %></td>
          <td class="col-md-2">$<%= product.price %></td>
          <td class="col-md-2"><%= product.description %></td>
          <td class="col-md-2"><%= product.categoryType %></td>

          <td class="col-md-4">
            <%= link_to 'Show', product_path(product), class: "btn btn-light" %>
            <% if user_signed_in? %>


              <% if product.resource_id == current_user.id %>


                <%= link_to 'Edit', edit_product_path(product), class: "btn  btn-warning" %>
                <%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </td>
              <% end %>
            <% end %>
            </tr>
      <% end %>
      </tbody>

    </table>
    <% if user_signed_in? %>
      <div>
        <button type="button" class="index_button"><%= link_to 'New Post', new_product_path %></button>
      </div>
    <% end %>
  </div>
</div>

