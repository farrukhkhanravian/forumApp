<%= form_for ([@product, @comment]) do |f| %>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :Comment %><br>
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', products_path, class: "btn btn-default" %>